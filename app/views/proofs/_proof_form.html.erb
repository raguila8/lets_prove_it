<div class="clearfix"></div>
<%= form_with(model: @proof, remote: true, id: "proof-form", class: "edit-model-form validate-form") do |form| %>
  <%= form.hidden_field :problem_id, value: "#{@proof.problem.id}" %>
  <%= form.hidden_field :images, value: "#{@new_images}", id: "new-images" %>


  <div class="form-group">
    <%= form.hidden_field :content, class: "mb-20 form-control", id: "proof-input-#{@proof.id}", data: { type: "trix" } %>
    <trix-editor input="proof-input-<%=@proof.id%>" autofocus ></trix-editor>
    <span class="pull-right"><a target="_blank" href="/mathjax_cheatsheet" class="grey-link"><span class="glyphicon glyphicon-info-sign"></span> Math Formatting</a></span>
  <div class="clearfix"></div>
  </div>
  
  <input type="submit" value="Submit Proof" class="btn-ghost mb-5 btn-mult pull-right">
  
  <span class="btn-light mb-5 btn-mult mr-5 preview-btn pull-right" data-toggle="modal" data-target="#preview-modal">Preview</span>
  <%= link_to cancel_edit_path(@proof.id), remote: true, class: "btn-ghost mb-5 btn-mult pull-right mr-10" do %>
    <span>Cancel</span>
  <% end %>

<% end %>

