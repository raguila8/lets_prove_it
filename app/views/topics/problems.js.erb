<% if @problems.count > 0 %>
  $('.tab-content .tab-list-content').html("<%= escape_javascript render(:partial => '/shared/items/problem_item', locals: { problems_count: @problems.count }, collection: @problems, as: :problem ) %>");
<% else %>
  $(".tab-content .tab-list-content").html("<%= no_results_content('problems') %>");
<% end %>

$('.tab-content .tab-list-content').prepend("<div class='boxedtitle add-problem-title mb-40'><h2>Problems (<%=@problems.count%>)</h2></div>");

