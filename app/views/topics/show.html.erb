<!-- ========== Single Blog Post ========== -->

<div id="topic-page" class="pt-100 section container blog-classic">
  <div class="row">
    <ul id="pfolio-filters" class="portfolio-filters">
      <li class="active"><%= link_to "Description", topic_path(@topic.id), remote: true %></li>
      <li class=""><%= link_to "Feed", topic_problems_path(@topic.id), remote: true %></li>
      <li class=""><%= link_to "Top Users", topic_users_path(@topic.id), remote: true %></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-8 mb-sm-160 topic-content">
      
        <!-- Blog Post -->
        <div class="col-md-12 blog-post-single wow fadeIn" data-wow-delay=".1s" data-wow-duration="2s">
<!--
          
          <img class="img-responsive post-img" src="http://placehold.it/750x400" alt="Blog Post 1">
-->
          
          <!-- Title -->
          <h2 class="post-title font-weight-600 pt-20 problem-desc mb-30 "><%= @topic.name %></h2>
          
          
          <div class="mb-20 mt-20 blog-post-content">
            <%= sanitize @topic.description %>
            <button class="btn-text btn-small small-padding">Edit</button>
            <button class="btn-text btn-small small-padding">Report</button>
          </div>
        </div><!-- / .blog-post-single -->
      </div><!-- / .col-md-8 -->



    <!-- ========== Sidebar ========== -->

    <aside class="col-md-offset-1 col-md-3 sidebar">

      <!-- Stats - Widget -->
      <div class="col-md-12 ws-s stats-widget">
        <h5 class="header-widget">Topic Stats</h5>
        <ul>  
          <li><i class="fa fa-users mr-5 circle-icon"></i> Followers ( <span>10</span> )</li>
			    <li><i class="fa fa-question mr-5 circle-icon"></i> Problems ( <span>20</span> )</li>
					<li><i class="fa fa-comment circle-icon mr-5"></i> Proofs ( <span>50</span> )</li>
          <li><i class="fa fa-pencil mr-5 circle-icon"></i> Edits ( <span>24</span> )</li>

				</ul>
      </div><!-- / .stats-widget -->
       

      <!-- Recent Posts - Widget -->
