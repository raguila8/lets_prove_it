<div class="col-lg-12 mb-30">
  <div class="ft-item" style="padding: 25px 20px;">
    <div class="author-img" style="margin: auto; <%= 'border: none;' if notification.actor_id < 0 %>">
      <%= notification_user_image notification %>
    </div>
    <div class="float-right">
      <%= link_to notification_path(notification), remote: true, method: :delete, data: { confirm: "Are you sure you want to delete this notification?" } do %>
        <button class="btn-text-danger btn-small">Delete</button>
      <% end %>
    </div>

    <div style="clear: both;"></div>
    <small class="timestamp" style="float: left; color: #777; font-size: 80%; margin-top: 5px; margin-bottom: 0;"><%= time_ago_in_words(notification.created_at) %> ago</small>
    <div style="clear: both;"></div>
    <h4 style="color: #333; margin-bottom: 0; margin-top: 0;">
      <%= notification_actor_link notification %>
      <span><%= notification.message %></span>
    </h4>

    <% if not notification.details.blank? %>
      <p class="mt-10"><%= notification.details %></p>
    <% end %> 

    <% if notification.linkable? %>
      <%= link_to notification.link, class: "ft-link", style: "padding-top: 10px; line-height: 1.8em; font-size: 0.9em;" do %>
        <%= link_text(notification) %> <span class="linea-arrows-slim-right ml-5"></span>
      <% end %>
    <% end %>
  </div>
</div>

