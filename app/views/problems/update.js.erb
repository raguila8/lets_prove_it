<% @interactor.errors.each do |attribute, error| %>
  console.log("attribute: <%=attribute%>,   error: <%=error%>");

  <% if attribute == :description %>
    $input = $("#edit-problem-form textarea[data-field='<%=attribute%>']");
  <% else %>
    $input = $("#edit-problem-form input[data-field='<%=attribute%>']");
  <% end %>

  addInputError($input[0]);
  addInputErrorMsg($input[0], "<%= @interactor.errors.full_messages_for(attribute).join(". ") %>");

<% end %>

