<% if model.class.name == "Version" %>
  <% version = model %>
<% else %>
  <% version = model.acted_on %>
<% end %>

<div class="panel panel-default primary-card mb-40 version-panel">   
  <div class="panel-heading" style="padding: 5px 15px;" role="tab" id="heading-<%=version.id%>">
    <!-- Meta data -->
    <div class="post-meta mb-10">
      <div class="post-date float-left font-weight-500">
        <span class="no-transform">
          <%= meta_data_icon model %>
          <% if model.class.name == "Activity" %>
            <%= model.message %>  on <%=model.created_at.strftime('%B %d, %Y')%>
          <% else %>
            <a href='/users/<%= version.user.id %>'><%=version.user.username%></a> <%= version.version_number == 1 ? "created" : "edited" %>  <%= version.versioned_type.downcase %> on <%=version.created_at.strftime('%B %d, %Y')%>
          <% end %>
        </span>
      </div>
      <span class="label label-dark float-right">Version <%= version.version_number %></span>
      <div class="clearfix"></div>
    </div><!-- / .meta -->

      <h2 class="panel-title collapsed version-toggle" role="button" data-toggle="collapse" href="#collapse-<%=version.id%>" aria-expanded="false" aria-controls="collapse-<%= version.id%>">
        <span class="glyphicon glyphicon-chevron-down float-right"></span>
        <%= version.title %>
      </h2>
    <div class="version-description">
      <p>
        <%= version.description %>
      </p>
    </div>
  </div>
  <div id="collapse-<%=version.id%>" class="panel-collapse collapse version-content" role="tabpanel" aria-labelledby="heading-<%=version.id%>" data-version="<%=version.id%>">
    <div class="panel-body" data-has-content="false">
    </div>
  </div>
</div><!-- / .panel -->

