<%= render 'more_info_report' %>

<div class="container-fluid section">
  <div class="row">
    <div class="mh-auto ft-tabs">
          
			<!-- Tabs -->
			<div class="col-md-3 col-lg-2 no-gap mb-40">
				<ul class="tabs-list" role="tablist">

					<!-- Tab 1 -->
					<li role="presentation" class="active">
						<a href="<%= reports_path %>" aria-controls="tab1" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
							<div class="tab-bottom">
								<p><span class='fa fa-flag mr-5'></span> <span class='tab-text'>Reports</span></p>
							</div>
						</a>
					</li>

					<!-- Tab 2 -->
					<li role="presentation">
						<a href="<%= reserved_reports_path %>" aria-controls="tab2" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
							<div class="tab-bottom">
								<p><span class='fa fa-bookmark mr-5'></span> <span class='tab-text'>Reserved Reports</span></p>
							</div>
						</a>
					</li>

					<!-- Tab 3 -->
					<li role="presentation">
						<a href="<%= history_reports_path %>" aria-controls="tab3" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
							<div class="tab-bottom">
								<p><span class='fa fa-history mr-5'></span> <span class='tab-text'>History</span></p>
							</div>
						</a>
					</li>

					<!-- Tab 4 -->
					<li role="presentation">
						<a href="<%= users_reports_path %>" aria-controls="tab4" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
							<div class="tab-bottom">
								<p><span class='fa fa-user mr-5'></span> <span class='tab-text'>All Reviewers</span></p>
							</div>
						</a>
					</li>

					<!-- Tab 5 -->
					<li role="presentation">
						<a href="<%= help_reports_path %>" aria-controls="tab5" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
							<div class="tab-bottom">
								<p><span class='fa fa-question mr-5'></span> <span class='tab-text'>Help</span></p>
							</div>
						</a>
					</li>
				</ul>
			</div><!-- / .col-md-3 -->

			<!-- Tabs Content -->
			<div class="col-md-9 col-lg-10 no-gap tab-content">
				<!-- Tab Content 1 -->
				<div class="tab-pane fade active in">
					<div class="tab-content-text reports-tab-content-text page-content">
						<div class="boxedtitle add-problem-title" style="margin: 0 0 40px 0;"><h2>Reports</h2></div>
						<div class="tab-list-content">
						  <%= render 'reports_table' %>
						</div>
					</div>
				</div><!-- / #tab1 -->
			</div><!-- / .col-lg-8 -->

    </div>
  </div>
</div>


