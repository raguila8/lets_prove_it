<!DOCTYPE html>
<html>
  <head>
    <title>LetsProveIt</title>
    <link rel="shortcut icon" href="/assets/logo.ico">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,800italic,400,300,600,700,800%7CMontserrat:600,700&amp;subset=latin,latin" media="all">
  </head>

  <body id="page-top">
    <%= render 'shared/preloader' %>
    <%= render 'shared/flash_messages' %>
    <%= render 'layouts/navigation' %>
    <%= render 'layouts/header' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
