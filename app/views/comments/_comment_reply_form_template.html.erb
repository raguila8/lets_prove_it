<%= form_for Comment.new, url: { controller: :comments, action: :create}, 
               html: { remote: true, class: 'mb-60 mt-20 comment-reply-form comment-form', method: :create, 
							         style: "max-width: 650px; padding-left: ${paddingLeft}" } do |form| %>
  
  <input value="Comment" type="hidden" name="comment[commented_on_type]" id="comment_commented_on_type">
  <input value="${id}" type="hidden" name="comment[commented_on_id]" id="comment_commented_on_id">

  <div class="form-group">
    <%= form.text_area :content, class: "mb-0 form-control niceTextarea pt-15", placeholder: "Write a comment..." %>

    <div class='textAreaActions'>
		  <%= form.submit "Post Comment", class: "btn-ghost mb-5 btn-mult pull-left mr-10 ml-10", data: { action: 'submit-comment' }  %>
      <span class="btn mr-10 mb-5 btn-mult preview-btn pull-left borderSmall btn-light" data-toggle="modal" data-target="#preview-modal">Preview</span>
      <span class='greyLink btn-styles mb-5 ml-5 pull-left ph-0' data-action='close-reply-form'>Cancel</span>
      <div class='clearfix'></div>
    </div>

  </div>
<% end %>
