<%= form_for Comment.new, url: { controller: :comments, action: :create}, 
               html: { remote: true, class: 'mb-60 mt-20 comment-form', method: :create, 
							         style: 'max-width: 650px;' } do |form| %>
  <%= form.hidden_field :commented_on_type, value: resource.class.name %>
  <%= form.hidden_field :commented_on_id, value: resource.id %>


  <div class="form-group">
    <div class='input-container'>
      <%= form.text_area :content, class: "mb-0 form-control niceTextarea pt-15 form-input-validate", placeholder: "Write a comment...", data: { field: "content" } %>
    </div>
    <div class='textAreaActions'>
	    <%= form.submit "Post Comment", class: "btn-ghost mb-5 pull-left mr-10 ml-10", data: { action: 'submit-comment' } %>
      <span class="btn mr-5 mb-5 preview-btn pull-left borderSmall btn-light" data-toggle="modal" data-target="#preview-modal">Preview</span>
      <div class='clearfix'></div>
    </div>
  </div>
<% end %>
