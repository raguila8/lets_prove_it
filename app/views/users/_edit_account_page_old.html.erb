<div class="pt-100 section container-fluid blog-classic" id="account-edit">
  <div class="row">
    <div class="col-md-12">
      
      <div class="mh-auto ft-tabs">
        <div class="row">
            
          <!-- Tabs -->
          <div class="col-lg-2 no-gap">
            <ul class="tabs-list" role="tablist">

              <!-- Tab 1 -->
              <li role="presentation" class="<%= 'active' if current_page?(edit_user_path(@user))%>">
                <a href="<%= edit_user_path(@user) %>" aria-controls="tab1" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
                  <div class="tab-bottom">
                    <p>Edit Profile</p>
                  </div>
                </a>
              </li>

              <!-- Tab 2 -->
              <li role="presentation" class="<%= 'active' if current_page?(edit_user_registration_path)%>">
                <a href="<%= edit_user_registration_path %>" aria-controls="tab2" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
                  <div class="tab-bottom">
                    <p>Change Password</p>
                  </div>
                </a>
              </li>
            </ul>
          </div><!-- / .col-lg-4 -->


          <!-- Tabs Content -->
          <div class="col-lg-10 no-gap tab-content">

            <!-- Tab Content 1 -->
            <div class="tab-pane fade active in">
              <div class="col-md-8 tab-content-text page-content mt-20">
                <div class="tab-list-content">
                  <%= edit_account_content((@user if !@user.nil?))%>
                </div>
              </div>
            </div><!-- / #tab1 -->
          </div><!-- / .col-lg-8 -->
        </div><!-- / .row -->
      </div>
    </div>
  </div>
</div>

