<div class="section container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="mh-auto ft-tabs">
        <div class="row">
            
          <%= render 'shared/main_site_tabs' %>

          <!-- Tabs Content -->
          <div class="col-lg-8 no-gap tab-content">

            <!-- Tab Content 1 -->
            <div class="tab-pane fade active in">
              <div class="col-md-12 tab-content-text page-content pt-0">
                <div class="tab-list-content">
                  <div class="row">
                    <button class="btn-text font-weight-600" id='filter-btn'><span class="glyphicon glyphicon-filter"></span> Filter</button>
                  </div>

                  <div class="row" id="item-filters" style="display: none;" data-filter="all" data-sorter="created_at">
                    <div class="col-md-12">
                      <% if signed_in? %>
                        <div class="col-md-6">
                          <p>Filter:</p>
                          <ul id="pfolio-filters" class="portfolio-filters filter">
                            <li class="active"><a href="#" data-filter="all">All</a></li>
                            <li class=""><a href="#" data-filter="following">Following</a></li>
                            <li class=""><a href="#" data-filter="followers">Followers</a></li>
                          </ul>
                        </div>
                      <% end %>
                      <div class="col-md-6">
                        <p>Sort:</p>
                        <ul id="pfolio-filters" class="portfolio-filters sorter">
                          <li class="active"><a title="Users with the highest reputation scores" href="#" data-sorter="reputation">Repuation</a></li>

                          <li class=""><a title="New Users" href="#" data-sorter="created_at">New</a></li>
                          <li class=""><a title="Order by username" href="#" data-sorter="username">Username</a></li>
                        </ul>
                      </div>
                    </div>
                  </div>

                  <section class="ft-boxed-hover">
                    <div class="row">
                      <div class="col-md-12 no-gap mt-20">
                        <ul id="users-feed">
                          <% @users.each do |user| %>
                            <%= render partial: 'shared/items/user_item', locals: { user: user } %>
                          <% end %>
                        </ul>
                      </div>
                    </div><!-- / .row -->
                  </section>
                </div>
              </div>
            </div><!-- / #tab1 -->
          </div><!-- / .col-lg-10 -->
        </div><!-- / .row -->
      </div>
    </div>
  </div>
</div>
