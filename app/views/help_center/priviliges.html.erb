              </li>

              <!-- Tab 6 -->
              <li role="presentation" class="<%= 'active' if @privilige == 6 %>">
                <a href="#tab6" aria-controls="tab6" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
