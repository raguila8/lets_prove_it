            <!-- Tab Content 1 -->
						<div id="tab1" role="tabpanel" class="tab-pane fade <%= 'active in' if @privilige == 1 %>">
							<div class="tab-content-text page-content mt-20">
								<div class="boxedtitle add-problem-title mb-40"><h2>Create Posts</h2></div>
								<div class="tab-list-content">
							    <%= render "/help_center/priviliges/create_posts" %>
