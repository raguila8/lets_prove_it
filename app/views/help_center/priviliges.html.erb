    <div class="col-md-12">
      <div class="mh-auto ft-tabs">
        <div class="row">
            
          <!-- Tabs -->
          <div class="col-lg-2 no-gap">
            <ul class="tabs-list" role="tablist">

              <!-- Tab 1 -->
              <li role="presentation" class="<%= 'active' if @privilige == 1 %>">
                <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab" data-remote="true" aria-expanded="true">
                  <div class="tab-bottom">
