<div class="boxedtitle add-problem-title mb-40"><h2>Change Password</h2></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mb-40" }) do |form| %>

  <%= render 'shared/error_messages' %>

  <div class="form-group">
    <%= form.label :password %> <i>(leave blank if you don't want to change it)</i><br />

    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= form.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <!-- Submit -->
  <%= form.submit "Submit", class: "btn" %>
<% end %>

